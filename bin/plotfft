use strict;
use File::Temp qw/ tempfile tempdir /;

my ($fh, $filename) = tempfile();

print $filename."\n";

my $addr = shift;
my $count = shift;
my $bytes = $count*2;

my @buffer = `nrfjprog -f nRF52 --memrd $addr --w 16 --n $bytes;`;
system("nrfjprog -f nRF52 --run");
my @data;

foreach(@buffer){
  my @line = split(/\s+/);
  shift(@line);
  foreach my $i (0..7){
	my $hex = $line[$i];
	my $dec = hex($hex);
	$dec -= 65536 if $dec >= 16384;
	print $fh $dec."\n";
  }
}


system("octave --eval \"data = load('$filename'); addpath('matlab'); oct_dofft(data',4096,1,1,1,1,'');\" --persist");

